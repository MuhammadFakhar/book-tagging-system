<div class="container">
  <%= link_to "Back", books_path, class: "btn btn-secondary mt-2" %>
  <div class="row mt-2">
    <div class="col-sm-7 admin-btn-border m-auto p-1">
      <div class="row">
        <div class="col-sm-7">
          <%= image_tag(@book.avatar, class: 'show-card-image', style: 'width: 200px') %>
        </div>
        <div class="col-sm-5">
          <h2><%= @book.title %></h2>
          <p class="dull-text"><b>Author: </b><%= @book.author.name %></p>
          <p><b>Creation Date: </b><span class="dull-text"><%= @book.created_at.strftime("%d %B %Y") %></span></p>
          <p><b>Description: </b><span class="dull-text"><%= @book.description %></span></p>
        </div>
      </div>
    </div>
  </div>
</div>
