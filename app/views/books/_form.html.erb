<div class="form">
  <%= form_for @book do |f| %>
    <div class="errors">
      <% if @book.errors.any? %>
        <ul>
          <% @book.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="m-1">
      <label>UID <sup class="default-color">*</sup></label>
      <%= f.text_field :uid, class: 'form-control' %>
    </div>

    <div class="m-1">
      <label>Title <sup class="default-color">*</sup></label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="m-1">
      <label>Author <sup class="default-color">*</sup></label>
      <%= f.select :author_id, options_for_select(Author.all.map{|c| [c.name, c.id]}),{prompt: "Select Author"}, class: 'form-control' %>
    </div>

    <div class="m-1">
      <label>Description <sup class="default-color">*</sup></label>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="m-1">
      <label>Price <sup class="default-color">*</sup></label>
      <%= f.text_field :price, class: 'form-control' %>
    </div>

    <div class="m-1">
      <label>Picture <sup class="default-color">*</sup></label>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary mt-2' %>
    <%= link_to "Back", books_path, class: "btn btn-secondary mt-2" %>
  <% end %>
</div>
