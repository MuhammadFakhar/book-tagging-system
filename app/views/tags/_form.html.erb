<div class="form">
  <%= form_for @tag do |f| %>
    <div class="errors">
      <% if @tag.errors.any? %>
        <ul>
          <% @tag.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <label>Name <sup class="default-color">*</sup></label>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
    <%= link_to "Back", books_path, class: "btn btn-secondary mt-2" %>
  <% end %>
</div>
